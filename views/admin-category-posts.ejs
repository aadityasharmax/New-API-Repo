<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Admin Categories View</title>
</head>

<body class="bg-zinc-900 text-white p-5">
  <div class="container mx-auto py-10">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold">All Categories</h1>
      <a class="text-blue-400 hover:underline" href="/">Back to Home</a>
    </div>

    <!-- Categories Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% if (categories && categories.length > 0) { %>
        <% categories.forEach(cat => { %>
          <div class="bg-zinc-800 rounded-lg p-4 shadow hover:shadow-lg transition">
            <h2 class="text-xl font-semibold mb-2"><%= cat.name %></h2>
            <a href="/category/<%= cat.name %>" 
               class="text-blue-400 hover:underline"><img class="w-full h-40 object-cover " src="<%= cat.image %>" alt=""> </a>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-gray-400 col-span-4 text-center">No categories available.</p>
      <% } %>
    </div>
  </div>
</body>

</html>
