<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <title>Profile - <%= user.username %>
  </title>
</head>

<body class="bg-zinc-900 text-white">
  <!-- Header -->
  <div class="flex justify-between items-center w-full h-20 bg-zinc-800 p-6">
    <div>
      <h2 class="text-xl font-bold">
        <%= user.username %>
      </h2>
      <p class="text-gray-400">Age: <%= user.age %>
      </p>
    </div>
    <a href="/post/create" class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded text-white font-semibold">Create
      Post</a>
    <a href="/logout" class="bg-red-500 hover:bg-red-600 px-4 py-2 rounded text-white font-semibold">Logout</a>
  </div>

  <!-- Posts Section -->
  <div class="p-6">
    <h1 class="text-2xl font-bold mb-6">Your Posts</h1>

    <% if (posts.length===0) { %>
      <p class="text-gray-400">You have not created any posts yet.</p>
      <% } else { %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% posts.forEach(post=> { %>
            <div class="bg-zinc-800 rounded-lg overflow-hidden shadow-md">
              <% if (post.image) { %>
                <img src="<%= post.image %>" alt="Post Image" class="w-full h-48 object-cover">
                <% } else { %>
                  <div class="w-full h-48 bg-gray-700 flex items-center justify-center text-gray-400">No Image</div>
                  <% } %>
                    <div class="p-4">
                      <h2 class="text-xl font-semibold mb-2">
                        <%= post.title %>
                      </h2>
                      <p class="text-gray-400 mb-4">
                        <%= post.description %>
                      </p>
                      <div class="flex justify-between items-center text-sm text-gray-500">
                        <span>Slug: <%= post.slug %></span>
                        <span>
                          <%= post.createdAt.toDateString() %>
                        </span>
                      </div>
                      <a href="/post/edit/<%= post._id %>"
                        class="block mt-4 bg-green-600 hover:bg-green-700 text-center px-4 py-2 rounded text-white font-semibold">Edit</a>
                      <form action="/post/delete/<%= post._id %>" method="POST" style="display:inline;">
                        <button
                          class="block mt-4 bg-red-600 w-full hover:bg-red-700 text-center px-4 py-2 rounded text-white font-semibold"
                          type="submit" class="bg-red-600 text-white px-3 py-1 rounded">
                          Delete
                        </button>
                      </form>
                    </div>
            </div>
            <% }) %>
        </div>
        <% } %>
  </div>
</body>

</html>